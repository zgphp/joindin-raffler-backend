{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "beta",
    "require": {
        "php": "^7.0.8",
        "symfony/console": "^3.4",
        "symfony/dotenv": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "3.4.x-dev",
        "symfony/lts": "^3",
        "symfony/yaml": "^3.4"
    },
    "require-dev": {
        "behat/symfony2-extension": "^2.1",
        "friendsofphp/php-cs-fixer": "^2.7",
        "heroku/heroku-buildpack-php": "^126.0",
        "mockery/mockery": "^1.0",
        "phpspec/phpspec": "^4.2",
        "phpstan/phpstan": "^0.8.5",
        "phpunit/phpunit": "^6.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01BXPH1Y4A3772BXEHCBN1XQEX",
            "allow-contrib": false
        }
    }
}
